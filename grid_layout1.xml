<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GridLayout1">



 <GridLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:columnCount="3"
     android:rowCount="3"

     >
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="1"
         android:layout_row="0"
         android:layout_column="0"
         android:id="@+id/btn_grid1"
         />
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="2"
         android:layout_row="0"
         android:layout_column="1"
         android:id="@+id/btn_grid2"
         />
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="3"
         android:layout_row="0"
         android:layout_column="2"
         android:id="@+id/btn_grid3"
         />
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="4"
         android:layout_row="1"
         android:layout_column="0"
         android:id="@+id/btn_grid4"
         />
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="5"
         android:layout_row="1"
         android:layout_column="1"
         android:id="@+id/btn_grid5"
         />
     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="6"
         android:layout_row="1"
         android:layout_column="2"
         android:id="@+id/btn_grid6"
         />


     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="7"
         android:layout_row="2"
         android:layout_column="0"
         android:id="@+id/btn_grid7"
         />

     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="8"
         android:layout_row="2"
         android:layout_column="1"
         android:id="@+id/btn_grid8"
         />

     <Button
         android:layout_width="100sp"
         android:layout_height="100sp"
         android:background="@drawable/custome_roundview"
         android:text="9"
         android:layout_row="2"
         android:layout_column="2"
         android:id="@+id/btn_grid9"
         />

 </GridLayout>

</LinearLayout>