<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"

    tools:context=".practice_tutorial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login detail"
    android:gravity="center"
    android:textSize="30sp"
    android:textColor="@color/black"
    android:layout_marginBottom="40sp"

    ></TextView>



    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter first name"
        android:id="@+id/first"
        android:textSize="30sp"
        android:textColor="@color/black"

        />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter last name"
        android:textSize="30sp"
        android:id="@+id/last"
        android:layout_marginTop="10sp"

        android:textColor="@color/black"

        />


<!--    <Spinner-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/spinner_plate"-->
<!--        android:tooltipText="city"-->

<!--        />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:text="Which thing are you play"
        android:textSize="30sp"
        android:textColor="@color/white"

        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/radoigrp"

        android:orientation="horizontal"

        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket"
            android:textSize="30sp"
            android:layout_marginRight="30sp"
            android:id="@+id/cricket"
           />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:textSize="30sp"
            android:id="@+id/football"
            />

    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which city do you prefer for study"
        android:layout_marginTop="20sp"

        android:textSize="27sp"
        android:textColor="@color/white"

        />
    <Spinner
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_plate"
        android:scrollbarSize="30sp"

        ></Spinner>

    <Button
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:background="@color/purple_200"
        android:text="submit"
android:textSize="30sp"
        android:id="@+id/submit"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"

        />



</LinearLayout>