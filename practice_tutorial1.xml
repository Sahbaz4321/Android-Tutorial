<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeTutorial1">

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cricket"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cricket1"
        />



    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="football"
        app:layout_constraintTop_toBottomOf="@id/cricket1"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/football1"
        />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basket Ball"
        app:layout_constraintTop_toBottomOf="@id/football1"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/basketball"
        />

    <Button
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:id="@+id/btn_check"
        android:text="btn"
        android:background="@drawable/custome_roundview"
        app:layout_constraintTop_toBottomOf="@id/basketball"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>