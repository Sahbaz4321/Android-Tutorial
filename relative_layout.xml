<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relative_Layout">

    <Button
        android:id="@+id/relative_btn1"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_marginTop="40sp"
        android:background="@drawable/custome_roundview"
        android:text="btn 1"
        android:textSize="30sp"

        />

    <TextView
        android:id="@+id/relative_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_btn1"
        android:layout_centerVertical="true"
        android:layout_marginTop="127dp"
        android:text="Hi i am sahbaz"

        android:textSize="30sp" />

    <Button
        android:id="@+id/relative_btn2"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_below="@+id/relative_text"
        android:layout_marginTop="80dp"
        android:background="@drawable/custome_roundview"
        android:text="btn 2"
        android:textSize="30sp"

        />

</RelativeLayout>