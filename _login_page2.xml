<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context="._login_page">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="70sp"
        app:cardCornerRadius="30sp"
        android:elevation="16sp"


        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="30sp"
                android:padding="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:id="@+id/userdata"
                android:textSize="30sp"
                android:background="@drawable/custome_roundview"
                android:padding="10sp"
                android:drawableStart="@drawable/person"
                android:layout_marginBottom="20sp"
                />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/password_data"
                android:textSize="30sp"
                android:background="@drawable/custome_roundview"
                android:padding="10sp"
                android:drawableStart="@drawable/lock"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="forgot password"
                android:textColor="@color/black"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:id="@+id/forgotPassword"
                android:textStyle="bold"
                android:layout_marginBottom="20sp"
                android:layout_marginRight="5sp"
                />


            <Button
                android:layout_width="300sp"
                android:layout_height="100sp"
                android:text="Login"
                android:background="@drawable/custome_roundview"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:backgroundTint="@color/purple_200"
                android:id="@+id/login_button"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="or login with"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="20sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="65sp"
                >

                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/google"


                    android:id="@+id/google_image"
                    />


                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:padding="10sp"

                    android:src="@drawable/facebook"
                    android:id="@+id/facebook_image"
                    />


                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:padding="10sp"
                    android:src="@drawable/instagram"
                    android:id="@+id/instagram_image"
                    />



            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>